@{
    ViewData["Title"] = "Home Page";
}
@using BusinessLogics.ViewModels;
@model List<RecipeVM>

<div class="text-center">
    <h3 class="display-4">Свежие рецепты</h3>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators" style="filter: invert(100%);">
        @for (var i = 0; i < ViewBag.RecipeList.Count; i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")" ></li>
        }
    </ol>

    <!-- Slides -->
    <div class="carousel-inner" style="background-color: #7a431f">
        @for (var i = 0; i < ViewBag.RecipeList.Count; i++)
        {
            @*<div class="carousel-item @(i == 0 ? "active" : "")" >
                <a href="Home/Recipe?recipeId=@ViewBag.RecipeList[i].Id">
                    <img src="@ViewBag.RecipeList[i].ImagePath" alt="Slide @(i + 1)">
                    <div class="carousel-caption">
                        @ViewBag.RecipeList[i].Name - @ViewBag.RecipeList[i].Description
                    </div>
                </a>
            </div>*@

            <div class="card mb-3 carousel-item @(i == 0 ? "active" : "")" style="max-width: 100%; background-color: #ffffff">
                <a href="https://localhost:7188/Home/Recipe?recipeId=@ViewBag.RecipeList[i].Id">
                    <div class="row g-0">
                    <div class="col-md-6 d-flex align-items-center justify-content-center">
                      <img class="img-fluid" src="@(ViewBag.RecipeList[i].ImagePath == "noimage" ? "/Files/recipe.PNG" : @ViewBag.RecipeList[i].ImagePath)" alt="Slide @(i + 1)">
                    </div>
                    <div class="col-md-6">
                      <div class="card-body">
                        <h5 class="card-title" style="color: black;">@ViewBag.RecipeList[i].Name</h5>
                        <p class="card-text" style="color: black;">Время приготовления: @ViewBag.RecipeList[i].Timing.ToString("t")</p>
                        <p class="card-text"><small class="text-muted">Кол-во порций: @ViewBag.RecipeList[i].PortionAmount</small></p>
                      </div>
                    </div>
                  </div>
                </a>  
                
            </div>
        }
    </div>

    <!-- Controls -->
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev" style="color: black;">
        <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(100%);"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next" style="color: black;">
        <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(100%);"></span>
        <span class="sr-only">Next</span>
    </a>
</div>