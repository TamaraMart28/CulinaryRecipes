@{
    ViewData["Title"] = "RegisterUser";
}

@if (TempData["Message"] != null)
{
    <div style="position: absolute; z-index: 2; width: 80%; left: 50%; transform: translate(-50%, -50%);" id="myBlock" class="fade-out-transition alert alert-danger">
      @TempData["Message"]
    </div>

    <style>
      .fade-out-transition {
        opacity: 1;
        transition: opacity 1s;
      }

      .fade-out-transition.fade-out {
        opacity: 0;
      }
    </style>

    <script>
      setTimeout(function() {
        const myBlock = document.getElementById("myBlock");
        myBlock.classList.add("fade-out");
      }, 3000);

      const myBlock = document.getElementById("myBlock");
      myBlock.addEventListener("transitionend", function() {
        myBlock.style.display = "none";
      });
    </script>
}

<div class="text-center">
    <h2 style="margin-bottom: 20px;" class="display-4">Регистрация</h2>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="form-group mx-auto" style="width:50%;">
        <input type="text" name="login" placeholder="Логин" class="form-control" />
    </div>
    <div class="form-group mx-auto" style="width:50%;">
        <input type="password" name="password" placeholder="Пароль" class="form-control" />
    </div>
    <div class="form-group mx-auto" style="width:50%;">
        <input type="text" name="nickname" placeholder="Никнейм" class="form-control" />
    </div>
    <div class="form-group mx-auto" style="width:50%;">
        <label >Аватар:</label>
        <input type="file" name="uploadedFile" />
    </div>
    <div style="text-align: center">
        <input type="submit" value="Регистрация" class="btn btn-primary"/>
    </div>
</form>
